<?php	 
	include_once("../clases/conexion.php");
	$conexion= new conexion();
	$funcion=trim($_POST["funcion"]);	
	if ($funcion=="1")
	{
		try{
			$sql="select id_producto,nombre_producto from productos where nivel=3 ORDER BY nombre_producto ASC";
			$ejecuta=mysql_query($sql,$conexion->link);
			
			echo "<option value='' selected>Seleccione Productos...</option>";
			while ($fila = mysql_fetch_array($ejecuta))	{
				
				
				echo "<option id=".$fila[0]." value=".utf8_encode($fila[2]).">".utf8_encode($fila[2])."</option>";

			}
		}
			catch (Exception $e)
		{    
			echo $e->getMessage();
		}			
	}
	else if ($funcion=="2")
	{	
		
		try{
			$busca_pro=trim($_POST["busca_pro"]);
			$sql="select id_producto,nombre_producto from productos where  nivel=3 and nombre_producto like '%".$busca_pro."%' ORDER BY nombre_producto ASC";
			$ejecuta=mysql_query($sql,$conexion->link);
			
			echo "<option value='' selected>Seleccione Productos...</option>";
			while ($fila = mysql_fetch_array($ejecuta))	{
				
				
				echo "<option id=".$fila[0]." value=".utf8_encode($fila[2]).">".utf8_encode($fila[2])."</option>";

			}
		}
			catch (Exception $e)
		{    
			echo $e->getMessage();
		}
 		
	}
?>